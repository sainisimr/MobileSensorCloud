<body>
<!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Virtual Sensors</h2>
                    <p class="lead">This will allow you to see virtual sensors and you can configure sensors.
                    </p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
    
    <div class="container">
<div class="row">
             <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading"> <strong class="">Sensor Status Configuration</strong>

                </div>
                <div class="panel-body">
            <% for(var i=1 in data)  {                     
            %>
      <div class="form-group">
            <label class="control-label">Sensor ID:</label>
        <%= data[i].sensorid %> 	</div>
        <div class="form-group">
            <label class="control-label">Sensor Status:</label>
         <%= data[i].status %> 	
         <a href="/togglesensor?id=<%= data[i].sensorid %>">Toggle status of the sensor</a>
         </div>

              <% 
	            }  
	       %>         
   
  </form>   

	</div>
</div>
